<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define una acción a ejecutar -->
    <record id="action_open_dasboard_dg" model="ir.actions.client">
        <field name="name">Dashboard Dirección General</field>
        <field name="tag">TobaccoMetricsPro.Dashboard</field>
    </record>

    <record id="action_open_dasboard_g" model="ir.actions.client">
        <field name="name">Gerencia de Planeación</field>
        <field name="tag">TobaccoMetricsPro.Gerencia</field>
    </record>

    <record id="action_open_dasboard_gf" model="ir.actions.client">
        <field name="name">Gerencia Financiera</field>
        <field name="tag">TobaccoMetricsPro.GerenciaFinanciera</field>
    </record>

    <menuitem id="menu_dashboard"
              name="Tobacco Metrics Pro"
              action="action_open_dasboard_dg"
              sequence="10"/>

    <!-- Este es el nuevo ítem de menú que actuará como contenedor -->
    <menuitem id="menu_gerencia" 
              name="Gerencia" 
              parent="menu_dashboard" 
              sequence="15"/>

    <!-- Estos menús ahora son hijos del menú "Gerencia" -->
    <menuitem id="menu_dashboard_gerentes"
              name="Gerencia de Planeación"
              action="action_open_dasboard_g"
              sequence="20"
              parent="menu_gerencia"
              />
              
    <menuitem id="menu_dashboard_gerentes_financieros"
              name="Gerencia Financiera"
              action="action_open_dasboard_gf"
              sequence="30"
              parent="menu_gerencia"
              />
</odoo>
