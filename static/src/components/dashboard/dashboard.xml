<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="TobaccoMetricsPro.Dashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="row m-3">
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">Dashboard Direcci√≥n General</h1>
                                    <div>
                                        <select class="form-select">
                                            <option value="0">Select Period</option>
                                            <option value="7">Last 7 Days</option>
                                            <option value="30">Last 30 Days</option>
                                            <option value="90">Last 90 Days</option>
                                            <option value="365">Last 365 Days</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <MetricCard name="'Ventas'" value="state.ventas.value" percentage="state.ventas.porcentage"/>
                        <MetricCard name="'Costos'" value="state.ventas.value" percentage="state.ventas.porcentage"/>
                        <MetricCard name="'Utilidad'" value="state.ventas.value" percentage="state.ventas.porcentage"/>
                        <MetricCard name="'Calidad'" value="state.ventas.value" percentage="state.ventas.porcentage"/>
                    </div>
                    <!-- Grafico-->
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Products</h3>
                                    <div class="px-3 py-1 bg-green cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'doughnut'" title="'Top Products Report'"/>
                            </div>
                        </div>
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Sales People</h3>
                                    <div class="px-3 py-1 bg-green cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'pie'" title="'Top Sales People Report'"/>
                            </div>
                        </div>
                    </div>
                </div>
                 <!-- Grafico-->

                <div class="col-lg-5">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Monthly Sales</h3>
                                    <div class="px-3 py-1 bg-green cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'line'" title="'Monthly Sales Report'"/>
                            </div>
                        </div>
                    </div>
                    <!-- Grafico-->
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Partner Orders</h3>
                                    <div class="px-3 py-1 bg-green cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"/>
                                    </div>
                                </div>
                                <ChartRenderer type="'line'" title="'Partner Orders Report'"/>
                            </div>
                        </div>
                    </div>
                    <!-- Aqui se puede agregar otro grafico de ser necesario-->
                </div>
            </div>
        </div>
    </t>
</templates>