<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="TobaccoMetricsPro.MetricCard" owl="1">
        <div class="col-lg-4 m-0-p-0">
            <div class="shadow-sm border m-2 p-4 bg-white text-center">
                <div class="h1 fw-bold text-dark" style="font-size:27px"><span t-esc="props.value" /></div>
                <div class="h3 text-muted" style="font-size:22px">
                    <span t-esc="props.name" />
                </div>
                <div class="h3 mt-5">
                    <span t-attf-class="text-#{ props.porcentage > 0 ? 'success':'danger'}">
                        <span t-attf-class="me-1 fa fa-arrow-#{ props.porcentage > 0 ? 'up':'down'}">
                                <span t-esc="props.porcentage" />%
                        </span>
                    </span>
                    <span> desde el ultimo periodo.</span>
                </div>
                </div>
            </div>
        
        </div>

    </t>
</templates>
